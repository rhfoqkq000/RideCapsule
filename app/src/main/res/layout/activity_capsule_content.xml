<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:focusable="true">

        <Button
            android:id="@+id/capsule_img_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="이미지 선택"
            android:visibility="visible" />

        <android.support.v4.view.ViewPager
            android:id="@+id/capsule_viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/sliderDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/capsule_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="글을 입력하세요"
                android:inputType="text"
                android:minHeight="200dp"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/add_mail_cardview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="visible"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/add_mail_bt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="메일 추가" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/together_mail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="함께 받을 메일을 적으세요."
                    android:inputType="text"
                    android:padding="8dp"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    android:id="@+id/add_mail_cardview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/add_mail_bt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="메일 추가" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/together_mail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="함께 받을 메일을 적으세요."
                    android:inputType="text"
                    android:padding="8dp"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    android:id="@+id/add_mail_cardview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/add_mail_bt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="메일 추가" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/together_mail3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="함께 받을 메일을 적으세요."
                    android:inputType="text"
                    android:padding="8dp"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    android:id="@+id/add_mail_cardview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/add_mail_bt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="메일 추가" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/together_mail4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="함께 받을 메일을 적으세요."
                    android:inputType="text"
                    android:padding="8dp"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    android:id="@+id/add_mail_cardview5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <Button

                        android:id="@+id/add_mail_bt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="메일 추가" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/together_mail5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="함께 받을 메일을 적으세요."
                    android:inputType="text"
                    android:padding="8dp"
                    android:visibility="gone" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/capsule_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="날짜선택" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/capsule_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보내기" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>